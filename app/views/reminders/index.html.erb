<h1>Listing reminders</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>User</th>
      <th>Contact</th>
      <th>When</th>
      <th>Pending</th>
      <th>Received</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @reminders.each do |reminder| %>
      <tr>
        <td><%= reminder.id %></td>
        <td><%= reminder.user_id %></td>
        <td><%= reminder.contact_id %></td>
        <td><%= reminder.when %></td>
        <td><%= reminder.pending %></td>
        <td><%= reminder.received %></td>
        <td><%= link_to 'Show', reminder %></td>
        <td><%= link_to 'Edit', edit_reminder_path(reminder) %></td>
        <td><%= link_to 'Destroy', reminder, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Reminder', new_reminder_path %>
